<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MauiAppSignalR.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:MauiAppSignalR.Views"
	xmlns:local="clr-namespace:MauiAppSignalR">

	<TabBar>
		<ShellContent
			Title="Game"
			Icon="iconsample.png"
			ContentTemplate="{DataTemplate views:MainPage}" />
		<ShellContent
			Title="Player"
			Icon="iconsample.png"
			ContentTemplate="{DataTemplate views:PlayerPage}" />
		<ShellContent
			Title="History"
			Icon="iconsample.png"
			ContentTemplate="{DataTemplate views:HistoryPage}" />
	</TabBar>
</Shell>
